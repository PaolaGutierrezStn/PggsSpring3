<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.paola.pggsSpring3.PlayActivity"
    >

    <TextView
        android:id="@+id/txv_attempts"
        android:layout_width="@dimen/dimen250dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tiltle"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/txv_next"
        android:layout_width="@dimen/dimen250dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tiltle"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/imv_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen342dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/accept"
            android:background="@color/stn"/>

    </LinearLayout>



</LinearLayout>